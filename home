  <script>
    // Lys-spot hover-effekt på kortene
    const cards = document.querySelectorAll('.card-link');

    cards.forEach(card => {
      const overlay = card.querySelector('.card-overlay');
      const baseColor = card.dataset.color || '#ffffff';

      card.addEventListener('mousemove', (e) => {
        const rect = card.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        const xPercent = (x / rect.width) * 100;
        const yPercent = (y / rect.height) * 100;

        overlay.style.setProperty('--mx', xPercent + '%');
        overlay.style.setProperty('--my', yPercent + '%');

        overlay.style.background =
          `radial-gradient(circle at ${xPercent}% ${yPercent}%, rgba(255,255,255,0.4), transparent 60%),` +
          `linear-gradient(145deg, ${baseColor}, rgba(0,0,0,0.85))`;
      });

      card.addEventListener('mouseleave', () => {
        overlay.style.removeProperty('--mx');
        overlay.style.removeProperty('--my');
      });
    });
  </script>
